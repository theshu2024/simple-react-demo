{
  "compilerOptions": {
    "declaration": true,
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "CommonJS",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2016",
    "baseUrl": "./",
    "typeRoots": ["./typings/*.d.ts", "node_modules/@types"],
    "resolveJsonModule": true,
     // 开启装饰器使用
    "experimentalDecorators": true,
    "paths": {
      "@app/*": ["src/components/*"]
    },
  },
  "include": [ "src/**/*", "./typings/*.d.ts", "build/**/*"],
  "compileOnSave": true,
}
